<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lekha.stickpost.Login"
    android:background="#e1e1e1">

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lgbt"
        android:textSize="18sp"

        android:layout_marginBottom="37dp"
        android:layout_above="@+id/rhbt"
        android:layout_centerHorizontal="true"
        android:onClick="login" />

    <Button
        android:text="Register Here!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rhbt"

        android:textSize="18sp"
        android:onClick="reg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Login Id"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="100dp"
        android:fontFamily="sans-serif-condensed"
        android:elevation="1dp"
        android:textSize="24sp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textColor="#000000" />

    <TextView
        android:text="Password"
        android:id="@+id/textView3"
        android:textSize="23sp"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:layout_above="@+id/ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittextshape"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">
        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lg"
            android:layout_margin="5dp"
            android:background="#b8c1bc"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textSize="25sp"
            android:hint="Enter Login id"
            android:layout_below="@+id/textView"
            android:layout_weight="0.90" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_above="@+id/lgbt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/edittextshape"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pw"
            android:background="#b8c1bc"
            android:hint="Enter Password"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />
    </LinearLayout>
</RelativeLayout>
