<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lekha.stickpost.Register"
    android:background="#e1e1e1"
    android:elevation="6dp">

    <TextView
        android:text="Email Id"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/textView6"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/ll4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:text="Name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/textView4"
        android:textSize="17sp"
        android:layout_alignBaseline="@+id/ll2"
        android:layout_alignBottom="@+id/ll2"
        android:layout_toLeftOf="@+id/ll2"
        android:layout_toStartOf="@+id/ll2"
        android:textColor="#000000" />

    <TextView
        android:text="Re-enter"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/ll5"
        android:layout_toLeftOf="@+id/ll5"
        android:layout_toStartOf="@+id/ll5"
        android:textSize="17sp"
        android:textColor="#000000" />

    <TextView
        android:text="Login Id"
        android:layout_width="100dp"
        android:id="@+id/textView2"
        android:textSize="17sp"
        android:layout_height="30dp"
        android:layout_above="@+id/ll2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ll3"
        android:layout_toStartOf="@+id/ll3"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextshape"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lid"
        android:background="#b8c1bc"
        android:layout_margin="5dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll2"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="23dp">
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nm"
        android:background="#b8c1bc"
        android:layout_margin="5dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:id="@+id/ll4"
        android:background="@drawable/edittextshape">
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/eid"
        android:background="#b8c1bc"
        android:layout_margin="5dp"
       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll5"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="18dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/rpw1"
            android:layout_marginTop="23dp"
            android:background="#b8c1bc"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll6"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="20dp"
        >
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rpw"
        android:layout_marginTop="23dp"
        android:background="#b8c1bc"
        android:layout_margin="5dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/ll2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll3"
        android:background="@drawable/edittextshape">
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/pn"
        android:background="#b8c1bc"
        android:layout_margin="5dp"
         />
</LinearLayout>

    <TextView
            android:text="Phno"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView7"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/ll3"
            android:layout_alignBottom="@+id/ll3"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:textColor="#000000" />

    <TextView
        android:text="Password"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/textView8"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_above="@+id/ll5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
